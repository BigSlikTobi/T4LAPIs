# Example .env file for T4L NFL API
# Copy this to the parent directory (.env) and update with your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-anon-key

# LLM API Keys (Choose based on your preferred provider)
# OpenAI API (for story grouping and entity extraction)
OPENAI_API_KEY=your-openai-api-key

# Gemini / Google AI API (alternative LLM provider)
# Prefer GEMINI_API_KEY; GOOGLE_API_KEY is accepted as an alias
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_API_KEY=your-google-api-key

# DeepSeek API (alternative LLM provider)
DEEPSEEK_API_KEY=your-deepseek-api-key

# Story Grouping Feature Configuration
STORY_GROUPING_ENABLED=true
STORY_GROUPING_DRY_RUN=false
STORY_GROUPING_CONFIG_PATH=story_grouping_config.yaml

# Logging
LOG_LEVEL=INFO

# Development settings
DEBUG=true

# Performance and Timeout Settings
DATABASE_TIMEOUT=30
LLM_TIMEOUT=30
MAX_PARALLEL_WORKERS=4
